---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <header class="post-header text-center">
    <h1 class="post-title" style="letter-spacing: 0.05em;">{{ page.title }}</h1>
    <p class="post-description h5" style="color: #6B7280;">{{ page.description }}</p>
    {% if page.permalink == '/notes/' %}
      <div class="d-inline-flex align-items-center" style="gap: 0.25rem; font-size: 0.875rem; color: #6B7280;">
        <span>🗒️</span>
        <span>{{ site.notes.size }} notes</span>
      </div>
    {% endif %}
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
