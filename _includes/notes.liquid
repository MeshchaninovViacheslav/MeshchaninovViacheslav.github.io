<div class="col">
  <a href="{% if note.redirect %}{{ note.redirect }}{% else %}{{ note.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if note.img %}
        {%
          include figure.liquid
          loading="eager"
          path=note.img
          sizes = "250px"
          alt="note thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body d-flex flex-column">
        <h2 class="card-title">{{ note.title }}</h2>
        <p class="card-text flex-grow-1">{{ note.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if note.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ note.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if note.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ note.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
