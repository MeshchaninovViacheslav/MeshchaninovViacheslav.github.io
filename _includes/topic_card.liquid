<div class="col">
  <a href="{{ '/notes/topic/' | relative_url }}?name={{ topic.name | url_encode }}">
    <div class="card h-100 hoverable border-light rounded-lg">
      <div class="card-body d-flex flex-column justify-content-center">
        <h3 class="card-title text-center text-capitalize">{{ topic.name }}</h3>
        <p class="card-text text-center text-muted">{{ topic.items | size }} notes</p>
      </div>
    </div>
  </a>
</div> 